body {
	margin: 0px;
	padding: 0px;
	background: #262626 url(<%= asset_path 'img05.jpg' %>) repeat-x;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	color: #787878;
	min-width:1000px;
}

h1, h2, h3 {
	margin: 0;
	padding: 10px;
	font-weight: normal;
	font-family: Arial, Helvetica, sans-serif;
	color: #000000;
	text-shadow:#FFF 1px 1px;
}

h1 {
	font-size: 2em;
}

h2 {
	font-size: 3.2em;
}

h3 {
	font-size: 1.6em;
}

p, ul, ol {
	margin-top: 0;
	line-height: 180%;
}

ul, ol {
}

a {
	text-decoration: none;
	color: #f8ed8f;
}

a:hover {
		text-decoration: underline;
		color: #f9f4c6;

}

#wrapper {
	padding: 0px;
	margin: 0px;
}

.container {
	width: 1000px;
	margin: 0px auto;
}

/* Header */

#header-wrapper {
	overflow: hidden;
	height: 100px;
	background: url(<%= asset_path 'bkg_header.jpg' %>) repeat-x;
	padding: 0 0px;
}

#header {
	height: 100px;
	margin: 0 auto;
	padding: 0px 0px;
	width:897px;
}

#header_bot {
	height: 29px;
	margin-top: -2px;
	margin-left: auto;
	margin-right:auto;
	margin-bottom:0px;
	padding: 0px 50px;
	width:897px;
	background:url(<%= asset_path 'arrow_header.png' %>) left no-repeat;
}

/* Logo */

#logo {
	margin:auto;
	width: 301px;
	color: #731F1F;
	float:left;
}

#logo h1 {
	line-height: 100px;
	letter-spacing: -2px;
	font-size: 4.8em;
}

#menu {
	margin:auto;
	width: 500px;
	color: #ffffff;
	text-shadow:1px 1px #333;
	float:right;
	height:70px;
	padding-top:40px;
	text-align:right;
	font-size:1.5em;
}

/* Page */

#page {
	width: 900px;
	margin: 0 auto;
	padding: 5px 50px;
}

/* Content */

#content {
	width: 900px;
	padding: 0px 0px 0px 0px;
}

.post {
	overflow: hidden;
	margin-bottom: 10px;
}


/* Footer */
#footer-content {
	color: #fff;
}

#footer {
	width:897px;
	height: 50px;
	margin: 0 auto;
	padding: 5px 50px;
	font-family: Arial, Helvetica, sans-serif;
}

#footer p {
	margin: 0;
	padding-top: 0px;
	letter-spacing: 1px;
	line-height: normal;
	font-size: 14px;
	text-transform: uppercase;
	text-align: center;
	color: #888;
}

#notificacion {
	width: 870px;
	/*height: 217px;*/
	height: 380px;
	margin: 20px auto;
	padding-left: 20px;
	background: url(<%= asset_path 'img06.jpg' %>) repeat-x;
	background-size: 100% 100%;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border-radius: 20px;
	color:#FFF;
}

.btn {
	-moz-box-shadow:inset 0px 1px 0px 0px #ffffff;
	-webkit-box-shadow:inset 0px 1px 0px 0px #ffffff;
	box-shadow:inset 0px 1px 0px 0px #ffffff;
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #dfdfdf) );
	background:-moz-linear-gradient( center top, #ededed 5%, #dfdfdf 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#ededed', endColorstr='#dfdfdf');
	background-color:#ededed;
	-moz-border-radius:9px;
	-webkit-border-radius:9px;
	border-radius:9px;
	border:1px solid #dcdcdc;
	display:inline-block;
	color: #333;
	font-family:arial;
	font-size:23px;
	font-weight:bold;
	padding:6px 24px;
	text-decoration:none;
	text-shadow:1px 1px 0px #ffffff;
}.btn:hover {
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #dfdfdf), color-stop(1, #ededed) );
	background:-moz-linear-gradient( center top, #dfdfdf 5%, #ededed 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#dfdfdf', endColorstr='#ededed');
	background-color:#dfdfdf;
}.btn:active {
	position:relative;
	top:1px;
}

.biginfowhite {
	margin: 0;
	padding: 10px;
	font-weight: normal;
	font-size: 18px;
	font-family: Arial, Helvetica, sans-serif;
	line-height: 140%;
	color: #ccc;
	text-shadow:#222 1px 1px;
	text-align: justify;
}

